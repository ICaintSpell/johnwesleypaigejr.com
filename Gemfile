# Gemfile
# This file tells our host (Cloudflare Pages) what software it needs to build the site.

source "https://rubygems.org"

gem "jekyll", "~> 4.3.3"
gem "minima", "~> 2.5"
gem "jekyll-feed", "~> 0.12"

# Added for compatibility with newer Ruby versions
gem "logger"
gem "csv"
gem "base64"

# Recommended for Windows for faster performance
gem "wdm", ">= 0.1.0" if Gem.win_platform?
